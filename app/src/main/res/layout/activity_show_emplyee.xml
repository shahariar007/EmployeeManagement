<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    tools:context="com.example.n33r.presentationproject.RegistrationEmployee">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutdesign"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Details"
            android:padding="20dp"

            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:id="@+id/kisunahok" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:singleLine="true"
            android:layout_marginTop="8dp"
            android:hint="Name"
            android:id="@+id/showname"

            android:drawableLeft="@drawable/person"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:inputType="numberSigned"
            android:hint="Phone No"
            android:layout_marginTop="5dp"
            android:id="@+id/showphone"

            android:drawableLeft="@drawable/phone"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:layout_marginTop="5dp"
            android:hint="Email"
            android:id="@+id/showemail"

            android:drawableLeft="@drawable/email"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:hint="Birthday"
            android:layout_marginTop="5dp"
            android:id="@+id/showbirthday"

            android:drawableLeft="@drawable/birthday"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:hint="NID NO"
            android:layout_marginTop="5dp"
            android:id="@+id/shownid"

            android:drawableLeft="@drawable/number"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:layout_marginTop="5dp"
            android:hint="Salary"
            android:id="@+id/showsalary"
            android:inputType="numberSigned"
            android:drawableLeft="@drawable/salary"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textStyle="bold"
            android:id="@+id/delete"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstylexml"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_horizontal"
            android:padding="6dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textStyle="bold"
            android:id="@+id/update"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstylexml"

            android:layout_gravity="center_horizontal"
            android:padding="6dp"/>
    </LinearLayout>




</LinearLayout>

